{
    "restartable": "rs",
    "verbose": true,
    "env": {
        "DEBUG": "reminder*",
        "NODE_ENV": "development"
    },
    "ignore": [
        "dist/*",
        ".git",
        "node_modules/**/node_modules"
    ],
    "watch": [
        "src/**/*.ts"
    ],
    "ext": "js ts json",
    "exec": "ts-node ./src/index.ts"
}