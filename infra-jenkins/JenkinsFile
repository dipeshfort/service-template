pipeline {
    agent any
    stages {
        stage ('clone') {
            steps {
                git branch: 'develop', url: 'https://github.com/dipeshy/hh-reminder.git'    
            }
        }
        
        stage ('install, test') {
            steps {
                dir('infra-docker/tests') {
                    sh "BUILD_NO=${env.BUILD_NUMBER} ./start.sh"
                } 
            }

        }
    }
    
    post { 
        failure {
            notify('Failure')
        }
        success { 
            notify('Success')
            step([$class: 'JUnitResultArchiver', testResults: 'infra-docker/tests/reports/*.xml'])
        }
    }
}

def notify(status){
    emailext (
      to: "maxdipesh@gmail.com",
      subject: "${status}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]'",
      body: """<p>${status}: Job '${env.JOB_NAME} [${env.BUILD_NUMBER}]':</p>
        <p>Check console output at <a href='${env.BUILD_URL}'>${env.JOB_NAME} [${env.BUILD_NUMBER}]</a></p>""",
    )
}